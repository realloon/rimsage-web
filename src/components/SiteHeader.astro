---
import { navLinks } from '../data/site'
---

<header class="site-header">
  <div class="logo">
    <span class="logo-mark"></span>
    <span><a href="/">RimSage</a></span>
  </div>
  <nav class="nav" aria-label="Primary">
    {
      navLinks.map(link => (
        <a href={link.href} data-i18n={link.i18nKey}>
          {link.label}
        </a>
      ))
    }
  </nav>
  <div class="lang-switch">
    <label class="sr-only" for="lang-select">Language</label>
    <select id="lang-select" data-lang-select aria-label="Language switch">
      <option value="en">EN</option>
      <option value="zh">中文</option>
    </select>
  </div>
  <a
    class="repo-link"
    href="https://github.com/realloon/RimSage"
    target="_blank"
    rel="noreferrer"
    aria-label="RimSage GitHub repository"
    title="GitHub"
  >
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        d="M12 2C6.48 2 2 6.59 2 12.25c0 4.53 2.87 8.38 6.84 9.74.5.1.68-.22.68-.49 0-.24-.01-1.04-.01-1.89-2.78.62-3.37-1.22-3.37-1.22-.45-1.2-1.11-1.52-1.11-1.52-.91-.64.07-.63.07-.63 1 .07 1.53 1.06 1.53 1.06.9 1.57 2.35 1.12 2.92.85.09-.67.35-1.12.64-1.38-2.22-.26-4.55-1.14-4.55-5.07 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.31.1-2.73 0 0 .85-.28 2.78 1.05A9.43 9.43 0 0 1 12 6.92c.85 0 1.71.12 2.51.36 1.92-1.33 2.77-1.05 2.77-1.05.55 1.42.2 2.47.1 2.73.64.72 1.03 1.63 1.03 2.75 0 3.94-2.33 4.81-4.56 5.06.36.32.68.95.68 1.92 0 1.38-.01 2.49-.01 2.83 0 .27.18.6.69.49A10.25 10.25 0 0 0 22 12.25C22 6.59 17.52 2 12 2Z"
      ></path>
    </svg>
  </a>
</header>
