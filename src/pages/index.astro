---
import BaseLayout from '../layouts/BaseLayout.astro'
import SiteHeader from '../components/SiteHeader.astro'
import HeroSection from '../components/HeroSection.astro'
import FeaturesSection from '../components/FeaturesSection.astro'
import ToolsSection from '../components/ToolsSection.astro'
import ConnectSection from '../components/ConnectSection.astro'
import SelfHostedSection from '../components/SelfHostedSection.astro'
import SiteFooter from '../components/SiteFooter.astro'
import { pageMeta } from '../data/site'

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'RimSage',
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Web',
  url: 'https://rimsage.com/',
  description: pageMeta.description,
  softwareHelp: 'https://github.com/realloon/RimSage',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
}
---

<BaseLayout
  title={pageMeta.title}
  description={pageMeta.description}
  canonicalPath={pageMeta.canonicalPath}
  siteName={pageMeta.siteName}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>
  <SiteHeader />
  <main>
    <HeroSection />
    <FeaturesSection />
    <ToolsSection />
    <ConnectSection />
    <SelfHostedSection />
  </main>
  <SiteFooter />
</BaseLayout>
